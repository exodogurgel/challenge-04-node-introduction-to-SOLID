{
  "openapi": "3.0.0",
  "info": {
    "title": "Challenge 05 - node Documentation",
    "description": "This is an Api for node challenge documentation",
    "version": "1.0.0",
    "contact": {
      "email": "exodo@email.com"
    }
  },
  "tags": [
    {
      "name": "Users",
      "description": "Users management"
    }
  ],
  "paths": {
    "/users": {
      "description": "User management",
      "post": {
        "tags": ["Users"],
        "summary": "Create a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "email"
                  }
                },
                "example": {
                  "name": "John",
                  "email": "john_doe@email.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "email"
                    },
                    "created_at": {
                      "type": "date"
                    },
                    "updated_at": {
                      "type": "date"
                    }
                  },
                  "example": {
                    "id": "80e56ccd-2f32-465e-bbeb-af335ab6fccc",
                    "admin": false,
                    "name": "John",
                    "email": "john_doe@email.com",
                    "created_at": "2022-11-15T21:45:57.495Z",
                    "updated_at": "2022-11-15T21:45:57.495Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "User already exists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "User already exists"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "Returns all users",
        "description": "Only `admin` user can access",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Operation performed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "email"
                    },
                    "created_at": {
                      "type": "date"
                    },
                    "updated_at": {
                      "type": "date"
                    }
                  },
                  "example": [ 
                    {
                      "id": "80e56ccd-2f32-465e-bbeb-af335ab6fccc",
                      "admin": false,
                      "name": "John",
                      "email": "john_doe@email.com",
                      "created_at": "2022-11-15T21:45:57.495Z",
                      "updated_at": "2022-11-15T21:45:57.495Z"
                    },
                    {
                      "id": "e7339862-c632-4ad4-a938-fe0a6afbdca2",
                      "admin": true,
                      "name": "Êxodo",
                      "email": "exodo@email.com",
                      "created_at": "2022-11-15T21:45:57.495Z",
                      "updated_at": "2022-11-15T21:45:57.495Z"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "User without permission or user not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "User not admin"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Returns a specific user",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "description": "User ID",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Operation performed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "email"
                    },
                    "created_at": {
                      "type": "date"
                    },
                    "updated_at": {
                      "type": "date"
                    }
                  },
                  "example": {             
                    "id": "98f8f448-1599-4a84-ab11-1685e0179d58",
                    "admin": false,
                    "name": "Êxodo",
                    "email": "exodo@email.com",
                    "created_at": "2022-11-16T00:47:16.953Z",
                    "updated_at": "2022-11-16T00:47:16.953Z"
                  } 
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "User not found"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["Users"],
        "summary": "turn an admin user",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Operation performed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "email"
                    },
                    "created_at": {
                      "type": "date"
                    },
                    "updated_at": {
                      "type": "date"
                    }
                  },
                  "example": {             
                    "id": "98f8f448-1599-4a84-ab11-1685e0179d58",
                    "admin": true,
                    "name": "Êxodo",
                    "email": "exodo@email.com",
                    "created_at": "2022-11-16T00:47:16.953Z",
                    "updated_at": "2022-11-16T00:47:16.953Z"
                  } 
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "User not found"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}